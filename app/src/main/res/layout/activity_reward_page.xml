<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:background="#28333F"
android:layout_height="match_parent"
tools:context=".RewardPage">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-44dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Discount_offer"
        android:layout_width="match_parent"
        android:layout_height="208dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popular_offer">

        <LinearLayout
            android:layout_width="389dp"
            android:layout_height="204dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/discount_text"
                android:layout_width="256dp"
                android:layout_height="22dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="top"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="-5sp"
                android:text="Discount For You"
                android:textColor="#ffffff"
                android:textSize="18sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/discount_main_layer"
                    android:layout_width="163dp"
                    android:layout_height="174dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/discount_main_layer"
                    android:elevation="12dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/discount_main_image2"
                        android:layout_width="139dp"
                        android:layout_height="95dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/motor_insurance" />

                    <TextView
                        android:id="@+id/discount_offer_main_text2"
                        android:layout_width="58dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="3dp"
                        android:gravity="top"
                        android:lineSpacingExtra="-1sp"
                        android:text="10% off on"
                        android:textColor="#cdcdcd"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/discount_insurance2"
                        android:layout_width="139dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:gravity="top"
                        android:lineSpacingExtra="-3sp"
                        android:text="Car Insurance"
                        android:textColor="#ffffff" />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/discount_main_layer1"
                    android:layout_width="163dp"
                    android:layout_height="174dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/discount_main_layer"
                    android:elevation="12dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/discount_main_image1"
                        android:layout_width="139dp"
                        android:layout_height="95dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/home_insurance" />

                    <TextView
                        android:id="@+id/discount_offer_main_text1"
                        android:layout_width="58dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="3dp"
                        android:gravity="top"
                        android:lineSpacingExtra="-1sp"
                        android:text="20% off on"
                        android:textColor="#cdcdcd"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/discount_insurance1"
                        android:layout_width="139dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:gravity="top"
                        android:lineSpacingExtra="-3sp"
                        android:text="Home Insurance"
                        android:textColor="#ffffff" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/popular_offer"
        android:layout_width="388dp"
        android:layout_height="189dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/special_offer">

        <LinearLayout
            android:id="@+id/popular_offer_layer1"
            android:layout_width="390dp"
            android:layout_height="188dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/popular_offer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:gravity="top"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="-5sp"
                android:text="Popular Discounts"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/popular_offer_main1"
                    android:layout_width="wrap_content"
                    android:layout_height="154dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/popular_offer_main1"
                    android:elevation="12dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/popular_offer_main_image"
                        android:layout_width="139dp"
                        android:layout_height="95dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/popular_offer_main_image"
                        android:src="@drawable/life_insurance" />

                    <TextView
                        android:id="@+id/popular_offer_main_text1"
                        android:layout_width="58dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="3dp"
                        android:gravity="top"
                        android:lineSpacingExtra="-1sp"
                        android:text="20% off on"
                        android:textColor="#cdcdcd"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/life_insurance"
                        android:layout_width="139dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:gravity="top"
                        android:lineSpacingExtra="-3sp"
                        android:text="Life Insurance"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/popular_offer_main2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/popular_offer_main1"
                    android:elevation="12dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/popular_offer_main_image2"
                        android:layout_width="139dp"
                        android:layout_height="95dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/car_insurance" />

                    <TextView
                        android:id="@+id/popular_offer_main_text2"
                        android:layout_width="58dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="3dp"
                        android:gravity="top"
                        android:lineSpacingExtra="-1sp"
                        android:text="30% off on"
                        android:textColor="#cdcdcd"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/life_insurance2"
                        android:layout_width="139dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:gravity="top"
                        android:lineSpacingExtra="-3sp"
                        android:text="Car Insurance"
                        android:textColor="#ffffff" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/special_offer"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondary_header">

        <LinearLayout
            android:id="@+id/special_offer_layout"
            android:layout_width="391dp"
            android:layout_height="155dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/special_offer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="top"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="-5sp"
                android:text="Special Offers on"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/special_offer_main"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/special_offer_button"
                    android:layout_width="102dp"
                    android:layout_height="110dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/special_offer_button"
                    android:clipToOutline="true"
                    android:elevation="12dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/special_offer_image1"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/special_offer_image1"
                        android:src="@drawable/added_service" />

                    <TextView
                        android:id="@+id/special_offer_text1"
                        android:layout_width="86dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="14dp"
                        android:gravity="center"
                        android:lineSpacingExtra="-2sp"
                        android:text="Added\nServices"
                        android:textColor="#cdcdcd"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/special_offer_button2"
                    android:layout_width="102dp"
                    android:layout_height="110dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/special_offer_button"
                    android:clipToOutline="true"
                    android:elevation="12dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/special_offer_image2"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/special_offer_image1"
                        android:src="@drawable/insurance" />

                    <TextView
                        android:id="@+id/special_offer_text2"
                        android:layout_width="86dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="14dp"
                        android:gravity="center"
                        android:lineSpacingExtra="-2sp"
                        android:text="Insurance\nPremium"
                        android:textColor="#cdcdcd"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/special_offer_button3"
                    android:layout_width="102dp"
                    android:layout_height="110dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/special_offer_button"
                    android:clipToOutline="true"
                    android:elevation="12dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/special_offer_image3"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/special_offer_image1"
                        android:src="@drawable/motorr_insurance" />

                    <TextView
                        android:id="@+id/special_offer_text3"
                        android:layout_width="86dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="14dp"
                        android:gravity="center"
                        android:lineSpacingExtra="-2sp"
                        android:text="Motor\nInsurance"
                        android:textColor="#cdcdcd"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/header_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/header_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:src="@drawable/arrow_left" />

            <TextView
                android:id="@+id/header_text"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Earn Rewards"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </LinearLayout>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/secondary_header"
        android:layout_width="291dp"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:background="@drawable/secondary_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/secondary_header_main"
            android:layout_width="270.26dp"
            android:layout_height="76dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:id="@+id/secondary_header_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/secondary_header_text1"
                    android:layout_width="168dp"
                    android:layout_height="23dp"
                    android:gravity="top"
                    android:lineSpacingExtra="-5sp"
                    android:text="User Your Score"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/secondary_header_text2"
                    android:layout_width="168dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="4dp"
                    android:gravity="top"
                    android:lineSpacingExtra="-5sp"
                    android:text="To get Special discount Premium insurance plan"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondary_header_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/secondary_header_text"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView

                    android:id="@+id/secondary_header_two_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/object" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
